<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#2c3033</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ActionButton">
        <item name="android:background">@color/ButtonBack</item>
        <item name="android:textColor">@color/action</item>
        <item name="android:textSize">27sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:fontFamily">@font/oxygen_light</item>


    </style>
    <style name="NumberButton">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:background">@color/ButtonBack</item>
        <item name="android:textColor">@color/number</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>
    <style name="SideButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:background">@color/sidebar</item>
        <item name="android:textColor">@color/number</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>
</resources>
